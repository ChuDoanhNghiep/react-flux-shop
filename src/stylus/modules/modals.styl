//cross sell loading
.loading-bg
  display none
  
.cross-sell
  .loading-bg
    display block
    z-index 2000
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden
    background #fff url(../../static/img/checkout-loading.gif) no-repeat center 40%
    text-align center
    opacity 0.8
  .loading-text
    position absolute
    top 45%
    left 50%
    margin-left -20px

    
  .mfp-bg
    display none
  .mfp-wrap
    display none