// redefine magnific popup styles
.mfp-bg
  z-index 10000

.mfp-wrap
  z-index 10001
  
.mfp-close-btn-in 
  .mfp-close
    background-image url("../img/icon/close-overlay-x2.png")
    background-size 27px 27px
    height 27px
    margin 12px
    width 27px
    overflow hidden // make the text node inside the button invisible
    text-indent 999px

    &:hover
    &:focus
    &:active
      top 0

// popup animations
.mfp-zoom-in
  
  /* start state */
  .mfp-content
    opacity 0
    transform scale(0.8) 
    transition all 0.2s ease-in-out 
  
  &.mfp-bg
    opacity 0
    transition all 0.3s ease-out
  
  /* animate in */
  &.mfp-ready
    .mfp-content
      opacity 1
      transform scale(1) 
    &.mfp-bg
      opacity 0.8
  
  /* animate out */
  &.mfp-removing
    
    .mfp-content
      opacity 0
      transform scale(0.8) 
    &.mfp-bg
      opacity 0

// popup animations
.mfp-fade-in
  
  /* start state */
  .mfp-content
    opacity 0
    transition opacity 0.2s ease-in-out 
  
  &.mfp-bg
    opacity 0
    transition opacity 0.3s ease-out
  
  /* animate in */
  &.mfp-ready
    .mfp-content
      opacity 1
    &.mfp-bg
      opacity 0.8
  
  /* animate out */
  &.mfp-removing
    
    .mfp-content
      opacity 0
    &.mfp-bg
      opacity 0


