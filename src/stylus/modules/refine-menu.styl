.productsFilter
  color #000
  *
    box-sizing border-box
  .selectedFilter
    font-weight normal
    padding 12px 17px
    position relative


    .close
      cursor pointer
      font-size 1.3em
      position absolute
      right 14px
      top 11px

  .list
    &.expandable
      >.title
        margin-top -1px
        cursor pointer
        &:after
          content '+'
          position absolute
          right 1em

    &.expanded
      >.title
        &:after
          content '-'
 
          

    .title
      &:hover
        color color-secondary
      &.desktop
        font-weight normal
        padding 5px 0
    .menu-title
      font-family Arial, sans-serif
      font-size 14px
      font-weight bold !important
      text-transform uppercase
      color #000
      margin-left 17px 
      margin-top 27px
      margin-bottom 13px
      @media mq-m
        margin-left 0
        margin-bottom 0
        padding 15px

    &.submenu
      border border-black
      margin-top -1px
      @media mq-m
        border 1px solid #e1e1e1
          
    &.sorting-mobile
      padding 30px 17px 0
      border-bottom none
      .submenu
        border 1px solid #e1e1e1
        border-top none
      &+.list
        border-top none
  
  .submenu
    .title
      @extend .productsFilter .selectedFilter
      display block
      font-weight bold

      &.clear-selection
        font-size .8em
        font-weight initial
        text-transform uppercase
        border none

        @media mq-m
          display none

      .actions
        .close
          display inline-block
          font-size 1em
          font-weight normal
          padding-top .5em
          position initial
          position relative
          text-align center
          text-transform uppercase
          width 100%
          top initial
          right initial
          &:before
            color #000
            content 'Ã—'
            font-size 1.4em
            font-weight bold
            position relative
            top 1px
            margin-right 5px
  
  .browseMore
    display block
    font-weight normal
    padding 15.5px 0
    @media mq-m
      display none !important

  .content
    display none

  .filters
    >.list.submenu
      @media mq-m
        border-left none
        border-right none
        border-bottom none
      >.title
        @media mq-m
          border none 
      
    // .submenu
    //   border-left border-black
    //   border-right border-black

  .refine
    display block

  label.cfe
    display block
    padding 5px 17px
  
  .cfe-checkbox
    margin-right 8px
  .searchbox
    @extend .productsFilter label.cfe
    width initial
    .search
      position relative

    input
      border 1px solid color-silver
      font-size .9em
      line-height 14px
      padding 7px
      padding-right 24px
      width 100%

    .input-tail
      position absolute
      right 8px
      top 8px

  .refineResults:first-child
    @media mq-m
      margin-bottom 20px

refineMenu()
  .title
    border border-default
    text-transform initial

    &.desktop
      display none

  .selectedFilters
    & + .submenu
      margin-top 12px
      position relative
      border 1px solid #e1e1e1
      
      &:after
      &:before
        bottom 100%
        left 17px
        border solid transparent
        content " "
        height 0
        width 0
        position absolute
        
      &:after
        border-color rgba(242,242,242, 0)
        border-bottom-color #f2f2f2
        border-width 6px
        margin-left -6px

      &:before
        border-color rgba(255,255,255,0)
        border-bottom-color #e1e1e1
        border-width 8px
        margin-left -8px
        // content ''
        // position absolute
        // border 6px solid transparent
        // border-bottom-color color-concrete
        // top -12px
        // left 17px

      .title
        border none

.refineResults
  >.content
    display block

  @media mq-m
    {expandableMenu}
    refineMenu()
  .title.action-title
    @media mq-m
      border none

