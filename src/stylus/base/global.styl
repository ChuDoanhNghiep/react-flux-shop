//force scrollbar of dropdow-list displaying in broswers on MAC/IPAD/IPHONE
div.dropdown-list::-webkit-scrollbar
  -webkit-appearance none
  width 7px
  
div.dropdown-list::-webkit-scrollbar-thumb
  border-radius 4px
  background-color rgba(0,0,0,0.5)
  box-shadow 0 0 1px rgba(255,255,255,0.5)
  
.area-container
  margin 0 auto
  max-width 980px
  min-width 280px
  padding 0 20px
  width auto

  @media mq-m
    &.mobile-full-width
      padding 0 
