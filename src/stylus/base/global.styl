html,body
  font-size font-size-root
  color color-primary
  font-family font-family-default


html:lang(ja-jp)
  font-family "Hiragino Kaku Gothic Pro", "ヒラギノ角ゴ Pro W6"

img
  height auto
  max-width 100%
  min-width 1px
  &.scale
    width 100%
  
strong
  font-weight bold

em
  font-style italic

// redefine grid behaviour on tablet and mobile for 1 column
@media mq-m

  html, body
    font-size font-size-root * 1.1

  .kiwi-grid
    .kiwi-col
      &.m-1
        float none

  // redefine the visibility
  .kiwi-visible-m
    display block

