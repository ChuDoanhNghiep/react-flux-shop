a
  color color-primary
  cursor pointer
  display inline-block
  text-decoration none
  transition color .2s ease-out
  &:hover
    color color-secondary
    color rgba(color-primary, .5)

  &.black-bg
    background #000
    color #fff
    cursor pointer
    display inline-block
    &:hover
     color tint(#000, 50%)
     color rgba(255,255,255, .5)

  &.padding
    // @extends a.black-bg
    padding 4px 8px

  &.hover-bold
    cursor pointer
    display inline-block
    &:hover
     font-weight bold

  &.hover-black-bg
    cursor pointer
    display inline-block
    padding 4px 8px
    &:hover
     background #000
     color #fff

  &.reverse
    color color-secondary
    color rgba(color-primary, .5)
    &:hover
      color color-primary
  &.hover-black
    color color-primary
    &:hover
      color color-secondary
      color rgba(color-primary, .5)

  &.text-underlined
    text-decoration underline
