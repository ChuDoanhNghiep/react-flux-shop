.icon
  display inline-block
  &.icon-heart
    background-image: url("data:image/png;base64,")
    background-size 100% 100%
    height 13px
    width 16px
    @media mq-m
      height 23px
      width 26px

    &.black
      background-image: url("../img/icon/wishlist-black.png")
    &.grey
      background-image: url("../img/icon/wishlist-gray.png")

  &.icon-magnifier
    background-image: url("data:image/png;base64,")
    background-size 100% 100%
    height 16px
    width 16px
    &.black
      background-image: url("data:image/png;base64,")

.icon-inline
  display inline-block
  margin-top -2px
  vertical-align middle
  
.icon-prependInline
  @extend .icon-inline
  margin-right 12px //10px

.icon-appendInline
  @extend .icon-inline
  margin-left 10px
  
.icon-baseline
  display inline-block
  vertical-align baseline

.icon-svg
  display inline-block
  width 1em
  height 1em
  fill currentColor
  color #444
  