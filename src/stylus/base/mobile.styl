#mobile-menu
  // width 260px
  background #fff
  z-index 1
  border-left 1px solid color-mercury

  *
    box-sizing border-box

  {expandableMenu}
  
  .title
    font-size 12px
    
  .list
    &.current
      >.title
        background-color color-action
        color #fff
        &:after
          color #fff
        >a
          color #fff

  .submenu
    {paddingSubMenu} 

  .title
    height 58px
    cursor pointer

    &:hover
      color rgba(51, 51, 51, 0.5)

    .icon-prependInline
      margin-top -3px
  
    // .list
    //   &:not(.submenu)
    //     >.title
    //       background-image url('http://placehold.it/15') 
    //       background-position 10px 50% 
    //       background-repeat no-repeat
    //       padding-left 39px

  .divider
    margin 0 .5em

  .searchBox 
    padding 7px 9px

    .control-group
      position relative

    input
      width 100%
      padding 10px 22px 10px 6px
      
    .input-tail
      background-color inherit
      margin-right 6px
      margin-top -6px
      padding inherit
      position absolute
      right 0
      top 50%
      vertical-align middle


  // .content
  //   display none

  .sign-in
    .title
      padding-left 40px
      height 54px
      
  .title.selected-language
    padding-top 23px
    padding-bottom 44px
    font-size 12px
    height auto
    >a
      background-color #c4c4c4
      //margin-left -4px
      padding 8px 6px

  .content.language-list
    display block
    a
      display block
      font-size 12px
      border medium none
      padding 15px 0 0 34px
      height auto

      &:first-child
        padding-bottom 8px


    
  .select-location-mobile
    .title
      //rem-prop('font-size', 10px)
      font-size 12px
      line-height 18px //1.6em
      padding-bottom 12px //6px
      padding-top 12px //6px
      padding-right 0
      height 62px
      padding-left 8px

      >img
        margin-bottom 4px
        margin-right 3px
        border 1px solid color-mercury

      .selected-location
        display inline-block
        strong
          font-size 10px

  //shop & collect
  .list.red-menu    
    .title
      background-color #b92b17
      color #fff
      border-bottom 1px solid #fff
      height 43px
      padding 12px 13px
      font-family 'ITC Franklin W04',Verdana,sans-serif
      &:hover
        color #edc2b7

    &+div
      >.title
        border-top 1px solid #fff
        position relative


  .list.current
    >.title:hover
      color #edc2b7
      
  .arrow-down-white
    border-color #fff transparent
    border-style solid
    border-width 7px 8px 0
    height 0
    width 0
    position absolute
    top 0
    left 12px
    z-index 9

  .arrow-down-red
    border-color #b92b17 transparent
    border-style solid
    border-width 7px 7px 0
    height 0
    width 0
    position absolute
    top -1px
    left 13px
    z-index 10


