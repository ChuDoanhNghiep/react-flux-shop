// blocks
expandableMenu = 
  .list
    &.expandable
      >.title
        &:after
        // &::after
          content '+'
          position absolute
          right 26px //1em

    &.expanded
      >.title
        &:after
        // &::after
          content '-'
      >.content
        display block
  
  .secondary-menu
    background color-concrete
    
  // 3 levels of menu/submenu
  .submenu
    background color-concrete

  .title
    border-bottom border-default
    border-top border-default
    display block
    //rem-prop('font-size', 13px)
    font-size 14px
    font-weight initial
    margin-top -1px
    padding 19px 13px //15.5px 13px
    position relative
    text-transform uppercase

  .content
    display none

paddingSubMenu =
  >.title
    padding-left 39px

  .submenu
    >.title
      padding-left 52px

    .submenu
      >.title
        padding-left 67px       

      