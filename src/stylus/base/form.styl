input
  outline 0
  display inline-block

$input
  appearance none
  border border-black
  font-family 'Verdana'
  rem-prop('font-size', 12px) 
  margin 0
  // padding 8px
  padding 2.5px
  width 168px
  border-radius 0px

  @media mq-m
    padding 7.5px

  &.light
    border border-default
  &.normal
    border border-normal

input[type="text"], 
input[type="search"], 
input[type="password"]
  @extend $input

textarea
  @extend $input
  height 160px
  outline 0

.control-group
  .input-tail
    position absolute
    right 5px
    top 5px
.error-msg
  color #b92b17
  width 70%
  margin-left 30%
  float left
  margin-top 5px
  margin-bottom 5px
  font-size 12px

.aligned-form
  .text-row
    clearfix()
    width 90%
    float left
    .cfe-checkbox
      float left
      margin-top 3px
    .cfe-text
      padding-left 25px
      display block
      line-height 130%
  .control-group-button
    clearfix()
    margin 20px 0px 10px 0px
    width 90%
    text-align right
      
  .control-group
    clearfix()
    margin-bottom 5px
    .text
      width 30%
      float left
      label
        margin-top 10px
        display inline-block
        
    .input-ele
      width 60%
      float left
      clearfix()
      input[type="password"]
        padding 8px
        width 100%
        box-sizing border-box

      input[type="text"]
        padding 8px
        width 100%
        box-sizing border-box
      textarea
        width 100%
        box-sizing border-box

      .phone-input
        .callingcode-input
          float left
          width 35%
          position relative
          .phone-ico
            position absolute
            left 8px
            top 11px
            width 20px
            i
              display block
          input
            box-sizing border-box
            padding-left 43px
            border-right none
          .phone-ico:after
            content "+"
            font-size 13px
            position absolute
            left 25px
            top -1px
        .phonenum-input
          float left 
          width 65%

    .input-after
      width 10%
      float left
      .icon
        margin-top 8px
        margin 10px
        display inline-block
        width auto
        height auto
      i.ico
        display inline-block

  .error
    .input-ele
      input
        border 1px solid color-action
        color color-action
      span.pswplaceholder
        display block
        padding 5px 0px
        color color-action
        font-size 10px
    .select-box
      span
        border 1px solid color-action
        color color-action

    .input-after
      .icon
        background url(../img/form/cross.png) no-repeat
        width 9px
        height 9px
  .success
    .input-after
      .icon
        background url(../img/form/tick.png) no-repeat
        width 10px
        height 13px

.list
  .control-group
    .text
      width 100%
      clear both
      margin-bottom 10px
      line-height 160%
    .input-ele
      width 90%

label.cfe
  vertical-align middle
  cursor pointer
.cfe-radio,
.cfe-checkbox,
.cfe-select,
.cfe-file
  display inline-block
  cursor pointer
  background-repeat no-repeat
  vertical-align middle
.cfe-radio
  background-image:url("../img/form/radios.gif")
  background-repeat none
  width 18px
  height 18px
  margin 0px 5px
  &.cfe-state-0
    background-position 0px -20px
  &.cfe-state-1
    background-position 0 -20px
  &.cfe-state-2
    background-position 0 -2px
  &.cfe-state-3
    background-position 0 -2px

.cfe-checkbox
  background-image url("../img/form/checkbox.gif")
  width 12px
  height 14px
  // margin 0px 5px
  
  @media mq-s
    background-image url("../img/form/checkbox-mobile.png")
    width 18px
    height 18px

  &.cfe-state-0
    background-position 0px -1px
    @media mq-s
      background-position 0px -28px            
  &.cfe-state-1
    background-position 0 -1px
    @media mq-s
      background-position 0px -28px
  &.cfe-state-2
    background-position 0 -20px
    @media mq-s
      background-position 0 0
  &.cfe-state-3
    background-position 0 -20px
    @media mq-s
      background-position 0 0
  &.move-left
    margin-left 0
.cfe-select
  font-size 12px
  line-height 33px
  height 33px
  padding 0px 30px 0px 8px
  overflow hidden
  width 100%
  border border-normal
  box-sizing border-box
  float left
  position relative
  background url("../img/form/selector.png") 95% center no-repeat
  top 0
  left 0
.select-box
  overflow hidden
  height 35px
select.cfe-styled
  appearance none
  position relative
  width 100%
  height 33px
  line-height 32px
  top -33px
  float left
.cfe-disabled
  opacity 0.5

.popup-form
  input.normal
    padding 8px
    width 100%
  .control-group
    margin-bottom 15px
    .text
      margin-bottom 5px
@media (max-width:767px)
  .aligned-form
    .control-group-button
      width 100%

input.placeholder
  color color-silver

@media mq-m
  .sorting-desktop
    .cfe-radio
      background-image url("../img/form/radios-background.gif")
      background-size 29px 60px
      width 29px
      height 29px
      &.cfe-state-0
      &.cfe-state-1  
        background-position 0 -29px
        
.ie8
  .register-login
    .aligned-form
      label
        display inline
                  
              
      